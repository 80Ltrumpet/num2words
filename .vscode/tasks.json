{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run unit tests",
      "type": "shell",
      "command": "cargo test",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Build the project",
      "type": "shell",
      "command": "cargo build",
      "group": {
        "kind": "build"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Build the project (release)",
      "type": "shell",
      "command": "cargo build --release",
      "group": {
        "kind": "build"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Clean the project",
      "type": "shell",
      "command": "cargo clean",
      "group": {
        "kind": "none"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    }
  ]
}
